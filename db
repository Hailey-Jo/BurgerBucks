
SELECT * FROM MEMBER1;
DROP TABLE MEMBER1
CASCADE CONSTRAINTS;

CREATE TABLE MEMBER1(
	SEQ NUMBER(10) PRIMARY KEY,
	ID VARCHAR2(20) NOT NULL, 
	PASSWORD VARCHAR2(20) NOT NULL,
	BDAY VARCHAR2(20) NOT NULL,
	NAME VARCHAR2(20) NOT NULL,
	PHONE NUMBER(20) NOT NULL,
	SEX NUMBER(1) NOT NULL,
	MILEAGE NUMBER(10) NOT NULL,
	GRADE NUMBER(10) NOT NULL,
	EXP NUMBER(10) NOT NULL,
	DEL NUMBER(1) NOT NULL
);
CREATE SEQUENCE SEQ_MEMBER1
START WITH 1 INCREMENT BY 1;

INSERT INTO MEMBER1 
VALUES(1,'aaa','aaa','19891021','lee',01026482731,1,10,1,1,0);
DROP TABLE ADDR
CASCADE CONSTRAINT;

SELECT *FROM ADDR;
DROP SEQUENCE SEQ_ADDR;

CREATE TABLE ADDR(
	SEQ NUMBER(10) PRIMARY KEY,
	MEMBER_SEQ NUMBER(10) NOT NULL,
	ADDRESS VARCHAR2(100) NOT NULL,
	LAT NUMBER(10) NOT NULL,
	LNG NUMBER(10) NOT NULL,
	MEMO VARCHAR2(200),
	DEL NUMBER(2) NOT NULL
);

CREATE SEQUENCE SEQ_ADDR
START WITH 1 INCREMENT BY 1;

ALTER TABLE ADDR
ADD CONSTRAINT FK_ADDR_MEMBER_SEQ FOREIGN KEY(SEQ)
REFERENCES MEMBER1(SEQ);

INSERT INTO ADDR 
VALUES(1,1,'강남',1,1,'빨리',0);